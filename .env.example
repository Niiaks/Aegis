# ENVIRONMENT
AEGIS_ENV=development

# DATABASE
AEGIS_DB_HOST=localhost
AEGIS_DB_PORT=5432
AEGIS_DB_USER=aegis
AEGIS_DB_PASSWORD=
AEGIS_DB_NAME=aegis
AEGIS_DB_SSLMODE=disable
AEGIS_DB_MAX_OPEN_CONNS=25
AEGIS_DB_MAX_IDLE_CONNS=10
AEGIS_DB_CONN_MAX_LIFETIME=300
AEGIS_DB_CONN_MAX_IDLE_TIME=60

# SERVER
AEGIS_SERVER_PORT=8080
AEGIS_SERVER_READ_TIMEOUT=30
AEGIS_SERVER_WRITE_TIMEOUT=30
AEGIS_SERVER_IDLE_TIMEOUT=60
AEGIS_SERVER_CORS_ORIGINS=*

# REDIS
AEGIS_REDIS_ADDRESS=localhost:6379
AEGIS_REDIS_PASSWORD=
AEGIS_REDIS_DB=0
AEGIS_REDIS_POOL_SIZE=10
AEGIS_REDIS_MIN_IDLE_CONNS=5
AEGIS_REDIS_DIAL_TIMEOUT=5s
AEGIS_REDIS_READ_TIMEOUT=3s
AEGIS_REDIS_WRITE_TIMEOUT=3s
AEGIS_REDIS_LOCK_TTL=30s
AEGIS_REDIS_KEY_PREFIX=aegis:

# LOGGING
AEGIS_LOG_LEVEL=debug
AEGIS_LOG_FORMAT=console
AEGIS_LOG_SLOW_QUERY_THRESHOLD=100ms

# NEW RELIC (optional)
AEGIS_NEWRELIC_LICENSE_KEY=
AEGIS_NEWRELIC_LOG_FORWARDING=true
AEGIS_NEWRELIC_DISTRIBUTED_TRACING=true
AEGIS_NEWRELIC_DEBUG=false

# HEALTH CHECKS
AEGIS_HEALTHCHECK_ENABLED=true
AEGIS_HEALTHCHECK_INTERVAL=30s
AEGIS_HEALTHCHECK_TIMEOUT=5s
AEGIS_HEALTHCHECK_CHECKS=database,redis

# PAYSTACK
AEGIS_PAYSTACK_SECRET_KEY=
AEGIS_PAYSTACK_PUBLIC_KEY=
AEGIS_PAYSTACK_WEBHOOK_SECRET=
AEGIS_PAYSTACK_BASE_URL=https://api.paystack.co
